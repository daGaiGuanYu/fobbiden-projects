@import '../../../common/style/inheritance'

.upload-pic-container
  width: 200px
  height: 200px
  position: relative
  img
    box-sizing: border-box
  input[type="file"]
    display: none
  .add-icon-wrapper, .refresh-icon-wrapper
    absoluteFull()
    flexBox(center)
    width: 100%
    height: 100%
    img
      max-width: 100%
      max-height: 100%

  .add-icon-wrapper
    border: dashed 1px #aaa
    border-radius: 4px
  .target
    absoluteFull()
    .target-img
      width: 100%
      height: 100%
    &:hover
      .refresh-icon-wrapper
        opacity: 0.3
    .refresh-icon-wrapper
      opacity: 0
      background: #000
      transition: opacity 0.3s
  